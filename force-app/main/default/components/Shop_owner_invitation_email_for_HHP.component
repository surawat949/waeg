                  <table width="100%" style="border-collapse: collapse;">
                      <tr>
                        <td valign="top" style="padding:0 25px;font-size:0;">
                          <span style=" font-family: Arial, Helvetica, sans-serif;font-weight:bold;font-size:20px;line-height:26px;color:#fff;text-align:left;display:block;">
                            <apex:outputText value="{!$Label.x2021_HPP_invitation_part1}" escape="false" />
                            </span>
                        </td>
                      </tr>
                  </table>
              </td>
              <td align="left" width="300" valign="top">
                <img src="{!staticResourceBaseURI}Hoya_Canada_Email_Images/images/banner-half.jpg" width="300" height="300" border="0" style="display:block;"></img>
              </td>
            </tr>
            </table></td>
        </tr>
        <!-- Main TR End-->

        <!-- Main TR Start-->
        <tr>
          <td align="center" style="background-color:#ffffff;padding:30px 30px 0px 30px;"><table align="center" width="540" border="0" cellspacing="0" cellpadding="0">
