        <tr>
          <td align="center"><table align="center" width="600" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td><a href="#/"><img src="{!staticResourceBaseURI}Hoya_Canada_Email_Images/images/header.png" alt="Hoya" width="600" height="65" border="0" style="display:block;"></img></a></td>
            </tr>
            </table></td>
        </tr>
        <!-- Main TR End-->


        <!-- Main TR Start-->
        <tr>
          <td align="center"><table align="center" width="600" border="0" cellspacing="0" cellpadding="0">
