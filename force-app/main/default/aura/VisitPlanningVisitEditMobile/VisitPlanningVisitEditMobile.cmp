                    <lightning:formattedUrl value="{!'/'+v.visit.Id}" label="{!v.visit.Name}" target="_blank"/>
                </aura:if>
            </h2>
            <aura:if isTrue="{!v.message!= null}">
                <ui:message title="Error" severity="error" closable="true">
