                        $Resource.fullcalendar + '/jquery.min.js',
                        $Resource.fullcalendar + '/moment.min.js',
                        $Resource.fullcalendar + '/jquery-ui.min.js',
                        $Resource.fullcalendar + '/fullcalendar.min.js',
